@model IEnumerable<ClientFormViewModel>
@{
    ViewData["Title"] = "View Client";
}


<div class="card ">
    <!--begin::Card header-->
    <div class="card-header">
        <!--begin::Card title-->
        <div class="card-title ms-5">
            <h2>العملاء</h2>

        </div>
        <!--end::Card title-->
        <!--begin::Card toolbar-->
        <div class="card-toolbar">
            <!--begin::Button-->
            <!--end::Button-->
        </div>
        <!--end::Card toolbar-->
    </div>
    <!--end::Card header-->
    <!--begin::Card body-->
    <div class="card-body py-0">

        <!--begin::Table wrapper-->
        <div class="">
            <div class="container p-0 ">

                <div class="row d-flex fs-5">
                    <div class="col-12 text-center">
                        <div class="row bg-primary py-2 rounded">
                            <div class="col-3">الاسم</div>
                            <div class="col-2">التيليفون</div>
                            <div class="col-2">البلد</div>
                            <div class="col-2"> الجمله/قطاعى</div>
                            <div class="col-2">  حسابه</div>

                            <div class="col-1"></div>
                        </div>
                    </div>
                </div>
                <div id="CopiesForm" class="card-primary border-primary ">
                    @foreach (var client in Model)
                    {
                        <div class="row fs-5 br-btm">
                            <div class="col-12 pb-1 ">
                                <div class="row text-center">

                                    <div class="col-3 ">@client.FullName</div>
                                    <div class="col-2 ">@client.PhoneNumber</div>

                                    <div class="col-2">@client.Email</div>
                                    <div class="col-2">@client.SortOfQuality</div>
                                    <div class="col-2">@client.Account </div>
                                    <div class="col-1">
                                        <a class="badge bg-warning fx-4" asp-action="Edit" asp-controller="Clients" asp-route-id="@client.Id">تعديل</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>


                <!--end::Table-->
            </div>
            <!--end::Table wrapper-->
        </div>
        <!--end::Card body-->
        
    </div>
</div>


   