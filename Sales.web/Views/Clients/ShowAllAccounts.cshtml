@model IEnumerable<AccountViewModel>
@{
    ViewData["Title"] = "View Client";
}


<div class="card ">
    <!--begin::Card header-->
    <div class="card-header">
        <!--begin::Card title-->
        <div class="card-title ms-5">
            <h2>الحسابات</h2>

        </div>
        <!--end::Card title-->
        <!--begin::Card toolbar-->
        <div class="card-toolbar">
            
        </div>
        <!--end::Card toolbar-->
    </div>
    <!--end::Card header-->
    <!--begin::Card body-->
    <div class="card-body py-0">

        <!--begin::Table wrapper-->
        <div class="">
            <div class="container p-0 ">

                <div class="row d-flex fs-5">
                    <div class="col-12 text-center">
                        <div class="row bg-primary py-2 rounded">
                            <div class="col-2">اسم الحساب</div>
                            <div class="col-1">المبلغ</div>
                            <div class="col-2">الملاحظه</div>
                            <div class="col-3"> تاريخ الاضافه</div>
                            <div class="col-3"> تاريخ التعديل</div>

                            <div class="col-1"></div>
                        </div>
                    </div>
                </div>
                <div id="CopiesForm" class="card-primary border-primary ">
                    @foreach (var account in Model)
                    {
                        <div class="row fs-5 br-btm">
                            <div class="col-12 pb-1 ">
                                <div class="row text-center">

                                    <div class="col-2 ">@account.Title</div>
                                    <div class="col-1 ">@account.Price</div>

                                    <div class="col-2">@account.Note</div>
                                    <div class="col-3">@account.CreatedOn</div>
                                    <div class="col-3">@account.LastUpdatedOn </div>
                                    <div class="col-1">
                                        <a class="badge bg-warning px-4" asp-action="EditAccount" asp-controller="Clients" asp-route-id="@account.Id">تعديل</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>


                <!--end::Table-->
            </div>
            <!--end::Table wrapper-->
        </div>
        <!--end::Card body-->
       
    </div>
</div>

