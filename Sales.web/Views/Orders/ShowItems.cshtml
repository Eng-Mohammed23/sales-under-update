@model IEnumerable<ItemFormViewModel>
@{
    ViewData["Title"] = "View item";
}


<div class="card ">
    <!--begin::Card header-->
    <div class="card-header border-0 d-flex">
        <!--begin::Card title-->
        <div class="card-title ms-5">
            <h2>الاصناف </h2>

        </div>
        <!--end::Card title-->
        <!--begin::Card toolbar-->
        <div class="card-toolbar">
            <!--begin::Button-->
            <!--end::Button-->
        </div>
        <!--end::Card toolbar-->
    </div>
    <!--end::Card header-->
    <!--begin::Card body-->
    <div class="card-body py-0">

        <!--begin::Table wrapper-->
        <div class="">
            <div class="container p-0 ">

                <div class="row">
                    <div class="col-12">
                        <div class="input-group mb-3">
                        </div>
                    </div>
                </div>
               
                <div class="row d-flex">
                    <div class="col-12 text-center fs-5">
                        <div class="row bg-primary py-2 rounded">
                            <div class="col-3">الصنف</div>
                            <div class="col-2">السعر</div>
                            <div class="col-2">  الكميه فى صاله العرض</div>
                            <div class="col-2">  الكميه فى مخزن 1</div>
                            <div class="col-2">  الكميه فى مخزن 2</div>

                            <div class="col-1"></div>
                        </div>
                    </div>
                </div>
                <div id="CopiesForm" class="card-primary border-primary ">
                    @foreach(var item in Model)
                    {
                        <div class="row fs-5 br-btm">
                            <div class="col-12 pb-1 ">
                                <div class="row text-center">

                                    <div class="col-3 ">@item.Title</div>
                                    <div class="col-2 ">@item.TheSourcePrice</div>

                                    <div class="col-2">@item.Store1.ToString("F5")</div>
                                    <div class="col-2">@item.Store2.ToString("F5")</div>
                                    <div class="col-2">@item.Store3.ToString("F5") </div>
                                    <div class="col-1">
                                        <a class="badge bg-warning px-4" asp-action="EditItem" asp-controller="Orders" asp-route-id="@item.Id">تعديل</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>

            <!--end::Table-->
        </div>
        <!--end::Table wrapper-->
    </div>
    <!--end::Card body-->
    <div class="p-2"></div>

</div>

